source 'https://rubygems.org'

group :test do
  gem 'parallel_tests' # testing in few threads
  gem 'capybara' # feature testing
  gem 'capybara-screenshot' # save screenshots after feature tests fails
  gem 'capybara-selenium' # run feature tests via selenium driver
  gem 'chromedriver-helper' # easy integration of feature test with chrome browser
  gem 'database_cleaner' # relaod DB after each test
  gem 'factory_bot_rails' # population test DB with fake data
  gem 'rspec-rails' # testing framework for rails
  gem 'rspec-retry' # gem for retry test after its fail
  gem 'shoulda-matchers' # testing rails models
  gem 'simplecov' # gem for test coverage statistic
end
